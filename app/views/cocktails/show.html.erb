<div class="cocktail-container" >

  <div class="cocktail-info" class="col-xs-4 col-sm-4">
    <h1><%= @cocktail.name %></h1>

    <ul class="ingredient-list" class="col-xs-4 col-sm-4">
      <% @cocktail.doses.each do |dose| %>
      <li> <i class="fas fa-glass-martini"></i> <span style="color: #E91E63"><%= dose.ingredient.name %></span> (<%= dose.description %>) | <%= link_to 'ðŸ—‘', dose_path(dose), method: :delete %></li>
      <% end %>
    </ul>

    <%= render 'doses/form' %>
  </div>

  <div class="cocktail-photo">
    <%= link_to cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill, :radius=>10), cocktail_path(@cocktail) %>
  </div>
</div>

